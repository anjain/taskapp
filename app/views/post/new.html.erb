<body class="bg-info">
  <%= render 'layouts/header' %>
  <h1 align="center">Create new post</h1>
  <div class="center" align="center">
    <%= form_for Post.new do |f| %>
      <%= f.label :Title %>
      <br>
      <%= f.text_field :title %>
      <br>
      <br>
      <%= f.label :Post %>
      <br>
      <%= f.text_area(:text, size: '50x5', placeholder: "Write Something...") %>
      <br>
      <%= f.submit "Create" , class: "btn navbar btn-primary"  %>
    <% end %>
  </div>
</body>